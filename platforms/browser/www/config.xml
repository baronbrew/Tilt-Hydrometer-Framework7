<?xml version='1.0' encoding='utf-8'?>
<widget id="com.baronbrew.tilthydrometerf7" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Tilt App v2</name>
    <description>
        Generation two app for Tilt scanning and logging data.
    </description>
    <author email="noah@baronbrew.com" href="http://www.tilthydrometer.com">
        Baron Brew Equipment
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="https://docs.google.com/*" />
    <allow-navigation href="https://tilthydrometer.com/*" />
    <preference name="Orientation" value="all" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="ShowSplashScreenSpinner" value="false" />
</widget>
