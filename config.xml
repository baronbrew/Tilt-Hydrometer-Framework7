<?xml version='1.0' encoding='utf-8'?>
<widget id="com.baronbrew.tilthydrometerf7" version="1.0.6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Tilt 2</name>
    <description>
        Generation two app for Tilt scanning and logging data.
    </description>
    <author email="noah@baronbrew.com" href="http://www.tilthydrometer.com">
        Baron Brew Equipment
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="https://docs.google.com/*" />
    <allow-navigation href="https://tilthydrometer.com/*" />
    <preference name="Orientation" value="all" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="KeepRunning" value="true" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <preference name="StatusBarOverlaysWebView" value="true" />
        <preference name="AutoHideSplashScreen" value="true" />
        <splash src="/res/screen/ios/Default@2x~universal~anyany.png" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="com.unarin.cordova.beacon" spec="git+https://github.com/petermetz/cordova-plugin-ibeacon.git" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-email-composer" spec="^0.8.15" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <engine name="ios" spec="^4.5.4" />
</widget>
